
  <!-- Main Content -->
  <div class="content-wrapper p-4">
    <div class="container-fluid">

      <!-- Header + Botón Nuevo Usuario -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lista de Usuarios</h3>
        <a href="/create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Nuevo Usuario
        </a>
      </div>

      <!-- Botón de Exportar PDF -->
      <div class="d-flex justify-content-end mb-3">
        <a href="/generate-pdf" class="btn btn-info" target="_blank">
          <i class="fas fa-file-pdf"></i> Exportar PDF
        </a>
      </div>

      <!-- Tabla de usuarios -->
      <div class="card">
        <div class="card-body p-0">
          <table class="table table-hover table-striped mb-0">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Rol</th>
                <th>Acción</th>
              </tr>
            </thead>
            <tbody>
              <% results.forEach((user) => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.user %></td>
                  <td><%= user.rol %></td>
                  <td>
                    <a href="/edit/<%= user.id %>" class="btn btn-sm btn-outline-info mr-1">
                      <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/delete/<%= user.id %>" class="btn btn-sm btn-outline-danger mr-1">
                      <i class="fas fa-trash"></i> Borrar
                    </a>
                    <a href="/generate-pdf/<%= user.id %>" class="btn btn-sm btn-outline-secondary">
                      <i class="fas fa-file-pdf"></i> PDF
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>